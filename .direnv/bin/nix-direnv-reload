#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/samherman1/Documents/projects/minieid3" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/samherman1/Documents/projects/minieid3")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/samherman1/Documents/projects/minieid3" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/samherman1/Documents/projects/minieid3/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/samherman1/Documents/projects/minieid3/.envrc" "/Users/samherman1/Documents/projects/minieid3/.direnv"/*.rc
